<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemEventoActivity" >

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >

		    <ImageView
		        android:id="@+id/foto"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_margin="0dp"
		        android:adjustViewBounds="true"
		        android:src="@drawable/museodelascienciasyelcosmos" />
		<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >
			    <LinearLayout
			        android:id="@+id/layout_fecha_inicio"
					android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:layout_marginLeft="16dp"
			    	android:layout_marginRight="16dp"
			    	android:layout_marginTop="10dp" >
			    	<ImageView
				        android:id="@+id/icon_fecha_inicio"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight=".10"
				        android:layout_margin="0dp"
				        android:adjustViewBounds="true"
				        android:src="@drawable/icon_calendar" />
			       	<TextView
				        android:id="@+id/titulo_fecha_inicio"
					    android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight=".35"
				        android:layout_marginLeft="16dp"
				        android:layout_marginRight="16dp"
				        android:textSize="15sp"
				        android:text="@string/titulo_fecha_inicio" />
			       	<TextView
				        android:id="@+id/fecha_inicio"
					    android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight=".55"
				        android:layout_marginLeft="16dp"
				        android:layout_marginRight="16dp"
				        android:textSize="15sp" />
			    </LinearLayout>
			    <LinearLayout 
				    android:id="@+id/layout_fecha_fin"
				    android:layout_below="@+id/layout_fecha_inicio"
					android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:layout_marginLeft="16dp"
			    	android:layout_marginRight="16dp"
			    	android:layout_marginTop="10dp" >
			    	<ImageView
				        android:id="@+id/icon_fecha_fin"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight=".10"
				        android:layout_alignParentLeft="true"
				        android:layout_margin="0dp"
				        android:adjustViewBounds="true"
				        android:src="@drawable/icon_calendar" />
			       	<TextView
				        android:id="@+id/titulo_fecha_fin"
					    android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight=".35"
				        android:layout_marginLeft="16dp"
				        android:layout_marginRight="16dp"
				        android:textSize="15sp"
				        android:text="@string/titulo_fecha_fin" />
			       	<TextView
				        android:id="@+id/fecha_fin"
					    android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight=".55"
				        android:layout_marginLeft="16dp"
				        android:layout_marginRight="16dp"
				        android:textSize="15sp" />
			    </LinearLayout>
			    <LinearLayout 
				    android:id="@+id/layout_lugar"
				    android:layout_below="@+id/layout_fecha_fin"
					android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:orientation="horizontal"
			    	android:layout_marginLeft="16dp"
			    	android:layout_marginRight="16dp"
			    	android:layout_marginTop="10dp" >
			    	<ImageView
				        android:id="@+id/icon_lugar"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight=".10"
				        android:layout_alignParentLeft="true"
				        android:layout_margin="0dp"
				        android:adjustViewBounds="true"
				        android:src="@drawable/icon_lugar" />
			       	<TextView
				        android:id="@+id/titulo_lugar"
					    android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight=".35"
				        android:layout_marginLeft="16dp"
				        android:layout_marginRight="16dp"
				        android:textSize="15sp"
				        android:text="@string/titulo_lugar" />
			       	<TextView
				        android:id="@+id/lugar"
					    android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight=".55"
				        android:layout_marginLeft="16dp"
				        android:layout_marginRight="16dp"
				        android:textSize="15sp"/>
			    </LinearLayout>	
			</RelativeLayout>
			
		    <TextView
		        android:id="@+id/texto_evento"
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="16dp"
		        android:layout_marginRight="16dp"
		        android:paddingTop="10dp"
		        android:textSize="15sp" />
		    
		    <Button
		        android:id="@+id/mas_info"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:text="@string/mas_info"
			    android:onClick="irAWeb" />
		    
    	</LinearLayout>
    </ScrollView>
    
<!--     <include layout="@layout/toolbar"/> -->

</RelativeLayout>
