<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dp"
    android:background="#fff"
    tools:context=".MuseoActivity$DummySectionFragment" >
    
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="16dp"
		    android:layout_marginRight="16dp"
	        >
	
	        <TextView 
	            android:id="@+id/titulo_horario"
	            android:text="@string/titulo_horario"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:textSize="20sp" />
	        
	        <View
	            android:id="@+id/separator1"
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:layout_below="@+id/titulo_horario"
			    android:background="@android:color/darker_gray"/>
	
		    
		     <TextView
		        android:id="@+id/texto_horario"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/separator1"
		        android:layout_marginTop="5dp" 
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp" />
	
		    <TextView 
	            android:id="@+id/titulo_tarifas"
	            android:text="@string/titulo_tarifas"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/texto_horario"
		        android:layout_marginTop="20dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:textSize="20sp" />
	        
	        <View
	            android:id="@+id/separator2"
			    android:layout_width="fill_parent"
			    android:layout_height="1dp"
			    android:layout_below="@+id/titulo_tarifas"
			    android:background="@android:color/darker_gray"/>
	
		    
		     <TextView
		        android:id="@+id/texto_tarifas"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/separator2"
		        android:layout_marginTop="5dp" 
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:paddingBottom="70dp" />
	
	    
	    </RelativeLayout>
    </ScrollView>
    
    <include layout="@layout/toolbar"/>
</RelativeLayout>
